-# in app/views/movies/show.html.haml
%h2 Details about #{@movie.title}
%ul#details
  %li
    Rating:
    = @movie.rating
  %li
    Released on:
    = @movie.release_date.strftime("%B %d, %Y")
= link_to 'Edit info', edit_movie_path(@movie)
= link_to 'Delete movie', @movie, method: :delete, :confirm => "Are you sure you want to delete this item?"
= link_to 'Back to the movies list', movies_path
= link_to 'Add review', new_movie_review_path(@movie)

